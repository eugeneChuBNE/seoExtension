{
  "manifest_version": 3,
  "name": "SEO Analyser",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "SEO Analyser"
  },
  "content_scripts": [
    {
      "matches": ["https://vietnix.vn/*"],
      "js": ["content.js"]
    }
  ]
}
